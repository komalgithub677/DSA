package arrays;

public class CreationOfArray {
             public static void main(String[] args) {
            	// Storing Marks of Students in a Subject
            	 int marks[] = new int[5];
            	 
            	 marks[0] = 37;
            	 marks[1] =78;
            	 marks[2] =89;
            	 marks[3] =90;
            	 marks[4] =95;
            	 
            	 int average = (marks[0] + marks[1] + marks[2]+marks[3]+marks[4])/5;
            	 
            	 System.out.println("marks of first subject would be the:" + marks[0]);
            	 System.out.println("Marks of second subject would be the :" + marks[1]);
            	 System.out.println("Marks of third subject would be the :" + marks[2]);
            	 System.out.println("Marks of fourth subject would be the :" + marks[3]);
            	 System.out.println("Marks of the fifthe subject would be the :" + marks[4]);
            	 
            	 System.out.println("Average Marks :" + average);
            	 
            	 if(average>=35) {
            		 System.out.println("Student get passed in each subject");
            	 }
            	 else {
            		 System.out.println("Student get failed in the every subject");
            	 }
            	 
            	 
                  //Daily Temperatures of a Week
            	 double temp[] = new double[7];
            	 
            	 temp[0] =37;
            	 temp[1] = 30;
            	 temp[2] =40;
            	 temp[3] =50;
            	 temp[4] =60;
            	 temp[5] =70;
            	 temp[6] =80;
            	 
            	 System.out.println("Tmperature of first day :" + temp[0]);
            	 System.out.println("2 day :" + temp[1]);
            	 System.out.println("3 day :" + temp[2]);
            	 System.out.println("4 day :" + temp[3]);
            	 System.out.println("5 day :" + temp[4]);
            	 System.out.println("6 day :" + temp[5]);
            	 System.out.println("7 day :" + temp[6]);
            	 
//            	 3️⃣ List of Items in a Shopping Cart
//
//            	 An e-commerce app stores prices of products added to the cart:
            	 int prices[] = new int[10];
            	 
            	 int watch = prices[0] = 300;
            	 int mobile = prices[1] = 70000;
            	 int kurti = prices[2] = 350;
            	 int bottle = prices[3] = 40;
            	 int bag = prices[4] =600;
            	 int laptop = prices[5] =90000;
            	 int book = prices[6] = 400;
            	 int notebook = prices[7] = 300;
            	 int sunglasses = prices[8] =1500;
            	 int charger = prices[9] = 600;
            	 
            	 System.out.println("    ");
            	 System.out.println("Product prices would be: ");
            	 System.out.println("Watch price would bethe " + watch);
            	 System.out.println("mobile pice :" + mobile);
            	 System.out.println("Kurti price :" + kurti);
            	 System.out.println("bottle price :" + bottle);
            	 System.out.println("bag price :" + bag);
            	 System.out.println("laptop price :" + laptop);
            	 System.out.println("book price" + book);
            	 System.out.println("Notebook price :" + notebook);
            	 System.out.println("Sunglasses price :" + sunglasses);
            	 System.out.println("Charger price :" + charger);
            	 
			}
}
