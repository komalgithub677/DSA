package arrays;

public class CreationOfArray {
             public static void main(String[] args) {
            	// Storing Marks of Students in a Subject
            	 int marks[] = new int[5];
            	 
            	 marks[0] = 37;
            	 marks[1] =78;
            	 marks[2] =89;
            	 marks[3] =90;
            	 marks[4] =95;
            	 
            	 int average = (marks[0] + marks[1] + marks[2]+marks[3]+marks[4])/5;
            	 
            	 System.out.println("marks of first subject would be the:" + marks[0]);
            	 System.out.println("Marks of second subject would be the :" + marks[1]);
            	 System.out.println("Marks of third subject would be the :" + marks[2]);
            	 System.out.println("Marks of fourth subject would be the :" + marks[3]);
            	 System.out.println("Marks of the fifthe subject would be the :" + marks[4]);
            	 
            	 System.out.println("Average Marks :" + average);
            	 
            	 if(average>=35) {
            		 System.out.println("Student get passed in each subject");
            	 }
            	 else {
            		 System.out.println("Student get failed in the every subject");
            	 }
            	 
            	 
                  //Daily Temperatures of a Week
            	 double temp[] = new double[6];
            	 
            	 temp[0] =37;
            	 temp[1] = 30;
            	 temp[2] =40;
            	 temp[3] =50;
            	 temp[4] =60;
            	 temp[5] =70;
            	 temp[6] =80;
            	 
            	 System.out.println("Tmperature of first day :" + temp[1]);
            	 System.out.println("2 day :" +temp[2]);
            	 System.out.println("3 day :" +temp[3]);
            	 System.out.println("4 day :" + temp[4]);
            	 System.out.println("5 day :" + temp[5]);
            	 System.out.println("6 day :" +temp[6]);
            	 System.out.println("7 day :" +temp[7]);
            	 
			}
}
